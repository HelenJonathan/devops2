# Nginx image and exposed port
NGINX_IMAGE=nginx:1.25-alpine
NGINX_PORT=8080

# Active pool for blue/green routing (blue or green)
ACTIVE_POOL=blue

# App images (replace with your actual image names)
BLUE_IMAGE=yimikaade/wonderful:devops-stage-two
GREEN_IMAGE=yimikaade/wonderful:devops-stage-two

# Host container ports for blue/green (host:container)
BLUE_PORT=8081
GREEN_PORT=8082

# Internal app port (inside container)
PORT=3000

# Release identifiers (for observability)
RELEASE_ID_BLUE=1.0.1
RELEASE_ID_GREEN=1.0.0


